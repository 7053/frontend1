/*@import 'nib/vendor'
@import 'nib/gradients'*/

gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_texto=#7A7A7A

vendor-prefixes= o ms moz webkit
@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?-57a6yv');
	src:url('../fonts/icomoon.eot?#iefix-57a6yv') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-57a6yv') format('woff'),
		url('../fonts/icomoon.ttf?-57a6yv') format('truetype'),
		url('../fonts/icomoon.svg?-57a6yv#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja
body
	background #e8e8e8
	color gris_oscuro
	font-family arial
	font-size 16px
footer
	background naranja
	color rgba(white,0.5)
	padding 1em
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal
		strong
			display block
		.mejor
			&:before
			&:after
				content "-"

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px
		img
			width 52px

	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			&:before
				display inline-block
				font-family "iconitos"
				content "\e600"
				margin 0 3px 0 0
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			top 15px
			text-align right
			text-decoration none
			width 50%
			&:after
				display inline-block
				font-family "iconitos"
				content "\f0d7"
				text-shadow 1px 1px 0 black

nav
	background azul
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em 
				text-decoration none

.posts
	padding 0.5em
	.post 
		background white
		color gris_texto
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		overflow hidden
		margin-bottom 1em
		.acciones
			border-top 3px solid azul
			padding 0.5em
			.datos
				float right
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
				.estrellita
					text-decoration none
					&:after
						font-family "iconitos"
						font-size 1.5em
						color #ECE704
						content: "\e601"

			.votos
				float left
				.down
				.up
					vertical-align middle
					text-decoration none
				.down
					color red
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\f0d7"
				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\f0d8"
		.descripcion
			color gris_texto
			.detalles
				height 160px
				margin-left 130px
				.autor
					margin 0.5em 0 2em 0
				.fecha
					float right
					margin 0 1em 0 0
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				.titulo
					color gris_texto
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
			.imagen
				float left
				img
					height 140px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)
	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					left 0px
					font-size 2.5em
					position absolute
					top -10px
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%